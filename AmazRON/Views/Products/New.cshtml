
@model AmazRON.Models.Product


<h2 class="text-center mt-5">Adaugare produs</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Products",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Titlu Produs")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere Produs")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control summernote" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Photo", "Fotografie")
                <br />
                @Html.TextBox("Photo", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Photo, "", new { @class = "text-danger" })
                <br />

                <br />
                @Html.LabelFor(model => model.Price, "Pret")
                <br />
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01" })

                <br />
                @Html.LabelFor(model => model.Stoc, "Stoc")
                <br />
                @Html.TextBoxFor(model => model.Stoc, new { @class = "form-control", type = "number", step = "1" })

                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
            "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Adauga produs</button>

            }

        </div>
    </div>
</div>